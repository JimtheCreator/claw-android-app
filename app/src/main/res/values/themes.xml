<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Claw" parent="Theme.Material3.DayNight.NoActionBar"
        >
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="Theme.Claw" parent="Base.Theme.Claw" />

    <!--    For the SearchBar-->
    <style name="RoundedSearchInput" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabPaddingStart">4dp</item>
        <item name="tabPaddingEnd">4dp</item>
        <item name="tabPaddingTop">2dp</item>
        <item name="tabPaddingBottom">2dp</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="CustomSearchViewStyle" parent="Widget.Material3.SearchView">
        <!-- Customize text color -->
        <item name="android:textColor">@color/white</item>
        <!-- Customize search icon -->
        <item name="searchIcon">@drawable/search_icon</item>
        <!-- Customize close icon -->
        <item name="closeIcon">@drawable/white_close_ic</item>
        <!-- Customize query hint color -->
        <item name="android:textColorHint">@color/matteblack</item>
        <!-- Customize query text appearance -->
    </style>

    <!--    FOR THE HOMETABLAYOUT-->
    <style name="CustomTabText">
        <item name="android:textSize">17.5sp</item> <!-- Adjust size as needed -->
        <item name="android:fontFamily">@font/sf_pro_text_medium</item> <!-- Optional -->
        <item name="textAllCaps">false</item> <!-- Set to false if you don't want uppercase -->
    </style>

</resources>