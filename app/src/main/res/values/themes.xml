<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Claw" parent="Theme.Material3.DayNight.NoActionBar"
        >
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Theme.Claw" parent="Base.Theme.Claw" />

    <!--    For the SearchBar-->
    <style name="RoundedSearchInput" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Add this to your styles.xml file in the res/values folder -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Background color -->
        <item name="android:windowBackground">@drawable/rounded_blackshade</item>
        <item name="android:background">@color/black_shade</item>

        <!-- Text color -->
        <item name="colorOnSurface">@color/off_white</item>
        <item name="android:textColorPrimary">@color/off_white</item>
        <item name="android:textColor">@color/off_white</item>

        <!-- Button colors -->
        <item name="colorPrimary">@color/chip_selected</item>
        <item name="colorAccent">@color/chip_selected</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/chip_selected</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gray_inactive</item>
    </style>

    <style name="DropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:popupBackground">@color/black_shade</item>
        <item name="android:textColor">@color/off_white</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.Material3.SearchView">
        <!-- Customize text color -->
        <item name="android:textColor">@color/white</item>
        <!-- Customize search icon -->
        <item name="searchIcon">@drawable/search_icon</item>
        <!-- Customize close icon -->
        <item name="closeIcon">@drawable/white_close_ic</item>
        <!-- Customize query hint color -->
        <item name="android:textColorHint">@color/matteblack</item>
        <!-- Customize query text appearance -->
    </style>


    <!--    FOR THE HOMETABLAYOUT-->
    <style name="CustomTabText">
        <item name="android:textSize">17.5sp</item> <!-- Adjust size as needed -->
        <item name="android:fontFamily">@font/sf_pro_text_medium</item> <!-- Optional -->
        <item name="textAllCaps">false</item> <!-- Set to false if you don't want uppercase -->
    </style>

</resources>