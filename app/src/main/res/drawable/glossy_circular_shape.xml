<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer (bottom) -->
    <item android:top="2dp" android:left="2dp">
        <shape android:shape="oval">
            <solid android:color="#20000000" />
        </shape>
    </item>

    <!-- Main background with gradient -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:centerX="0.3"
                android:centerY="0.2"
                android:startColor="#F0F5F0E8"
                android:centerColor="#B0F0E6D3"
                android:endColor="#70E8DCC6" />
            <stroke
                android:width="1dp"
                android:color="#80F0E6D3" />
        </shape>
    </item>

    <!-- Inner glow/highlight -->
    <item
        android:top="4dp"
        android:left="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="30%"
                android:centerX="0.4"
                android:centerY="0.3"
                android:startColor="#C0F8F3E8"
                android:endColor="#00F5F0E8" />
        </shape>
    </item>

    <!-- Top highlight shine -->
    <item
        android:top="6dp"
        android:left="12dp"
        android:right="20dp"
        android:bottom="40dp">
        <shape android:shape="oval">
            <solid android:color="#90F8F3E8" />
        </shape>
    </item>

</layer-list>