<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@drawable/rounded_blackshade"
    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
        android:id="@+id/usage_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/sf_pro_text_bold"
            android:text="View Usage"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/usage_dropdown_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/small_arrow_forward"
            app:tint="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/usage_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:visibility="gone"> <include
        android:id="@+id/usage_watchlist"
        layout="@layout/item_usage_bar"
        android:visibility="gone" />

        <include
            android:id="@+id/usage_price_alerts"
            layout="@layout/item_usage_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        <include
            android:id="@+id/usage_pattern_alerts"
            layout="@layout/item_usage_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        <include
            android:id="@+id/usage_sr_analysis"
            layout="@layout/item_usage_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        <include
            android:id="@+id/usage_trendline_analysis"
            layout="@layout/item_usage_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/unlimited_features_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/sf_pro_text_bold"
            android:text="Unlimited Features"
            android:textColor="@color/off_white"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/unlimited_watchlist"
            style="@style/UnlimitedFeatureTextStyle"
            android:text="✓ Watchlist" />

        <TextView
            android:id="@+id/unlimited_price_alerts"
            style="@style/UnlimitedFeatureTextStyle"
            android:text="✓ Price Alerts" />

        <TextView
            android:id="@+id/unlimited_pattern_alerts"
            style="@style/UnlimitedFeatureTextStyle"
            android:text="✓ Pattern Alerts" />

        <TextView
            android:id="@+id/unlimited_sr_analysis"
            style="@style/UnlimitedFeatureTextStyle"
            android:text="✓ S/R Analysis" />

        <TextView
            android:id="@+id/unlimited_trendline_analysis"
            style="@style/UnlimitedFeatureTextStyle"
            android:text="✓ Trendline Analysis" />

    </LinearLayout>

</LinearLayout>
